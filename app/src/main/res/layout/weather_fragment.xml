<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.mypopsy.widget.FloatingSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"
        app:fsv_menu="@menu/search_menu"
        app:fsv_icon="@drawable/ic_arrow_back_24dp"
        android:elevation="8dp" />

    <LinearLayout
        android:id="@+id/empty_layout"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/empty_weather"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="240dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/empty_screen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weather_layout"
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/city_name_textSize"
            android:text="Toronto"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            tools:text="Toronto" />

        <LinearLayout
            android:paddingTop="36dp"
            android:paddingBottom="36dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/weather_icon"
                android:src="@drawable/ic_01d"
                android:layout_width="84dp"
                android:layout_weight="1"
                android:layout_height="84dp" />

            <TextView
                android:id="@+id/temp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 C"
                tools:text="23 C"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/description_container_padding"
            android:paddingBottom="@dimen/description_container_padding"
            android:background="@color/bg_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:text="The weather now is" />

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/weather_text"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear sky"
                tools:text="Clear sky"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal|bottom"
            android:paddingTop="@dimen/info_container_paddingTop"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <com.afzaln.kijijiweather.ui.WeatherInfoView
                android:id="@+id/rain"
                android:layout_weight="1"
                app:wiv_icon="@drawable/rain"
                app:wiv_labelText="Rain"
                app:wiv_value="23 %"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.afzaln.kijijiweather.ui.WeatherInfoView
                android:id="@+id/clouds"
                android:layout_weight="1"
                app:wiv_icon="@drawable/clouds"
                app:wiv_labelText="Clouds"
                app:wiv_value="23 %"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.afzaln.kijijiweather.ui.WeatherInfoView
                android:id="@+id/wind"
                android:layout_weight="1"
                app:wiv_icon="@drawable/wind"
                app:wiv_labelText="Wind"
                app:wiv_value="23 m/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.afzaln.kijijiweather.ui.WeatherInfoView
                android:id="@+id/pressure"
                android:layout_weight="1"
                app:wiv_icon="@drawable/pressure"
                app:wiv_labelText="Pressure"
                app:wiv_value="23.000 hPa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.afzaln.kijijiweather.ui.WeatherInfoView
                android:id="@+id/humidity"
                android:layout_weight="1"
                app:wiv_icon="@drawable/humidity"
                app:wiv_labelText="Humidity"
                app:wiv_value="23 %"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>